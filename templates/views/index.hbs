{{> header}}
{{> nav}}
<!-- Page Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="mt-5">Recados: </h1>
      <table class="table">
        <thead>
          <tr>
            <th>Foto</th>
            <th>Nome</th>
            <th>Recado</th>
          </tr>
        </thead>
        <tbody>
          {{#each messages}}
          <tr>
            <td><img src='{{image_path}}' style='width:50px; height: auto;'></td>
            <td>{{nome}}</td>
            <td>{{message_text}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
  </div>
</div>

{{> footer}}